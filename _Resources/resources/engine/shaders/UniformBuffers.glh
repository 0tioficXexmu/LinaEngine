
layout (std140, column_major) uniform ViewData
{
mat4 projection; 
mat4 view; 
mat4 lightSpace;
mat4 VP;
vec4 cameraPosition;
float cameraNear;
float cameraFar;
};

layout (std140, column_major) uniform LightData
{
vec4 ambientColor;
int pointLightCount; 
int spotLightCount;
};

layout (std140, column_major) uniform AppData
{
vec2 screenSize;
vec2 mousePosition;
float deltaTime;
float elapsedTime;
};
 
layout (std140, column_major) uniform DebugData 
{ 
bool visualizeDepth; 
};