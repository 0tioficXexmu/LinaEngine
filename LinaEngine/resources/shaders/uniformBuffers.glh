
layout (std140, column_major) uniform ViewData
{
mat4 projection; 
mat4 view; 
mat4 lightSpace;
vec4 cameraPosition;
float cameraNear;
float cameraFar;
};

layout (std140, row_major) uniform LightData
{
int pointLightCount; 
int spotLightCount;
vec4 ambientColor;
vec4 dirLightPos;
};
 
layout (std140, row_major) uniform DebugData 
{ 
bool visualizeDepth; 
};